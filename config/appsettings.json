{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "System": "Information",
      "Microsoft": "Error"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultDb": "postgresql://ggrock_user:StrongPassword@localhost:5432/ggrock"
  },
  "Storage": {
    "BasePath": "/srv/ggrock/storage",
    "DiskPath": "/srv/ggrock/disks",
    "GameDiskPath": "/srv/ggrock/gamedisks"
  },
  "PXE": {
    "Enable": true,
    "Interface": "eth0",
    "BootFile": "undionly.kpxe",
    "UEFIFile": "ipxe.efi",
    "SecureBoot": true
  },
  "Clients": {
    "DefaultImage": "win11-base",
    "AllowSnapshots": true,
    "AllowMultipleSessions": false
  }
}